<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mrembo"
    tools:context=".BookAnAppointment">

    <TextView
        android:id="@+id/mTvTxtBook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:gravity="center"
        android:text="To book an appointment with a doctor kindly feel the forms below then you will be contacted by one of the assistants through a courtesy call or text SMS"
        android:textColor="#3F51B5"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/mTvBkName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:layout_weight="1"
        android:ems="10"
        android:hint="Enter Full Name"
        android:inputType="text"
        android:textColorHint="#4CAF50"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mTvTxtBook" />

    <EditText
        android:id="@+id/mTvBkPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:ems="10"
        android:hint="Enter Phone Number eg 07..."
        android:inputType="phone"
        android:textColorHint="#4CAF50"
        app:layout_constraintStart_toStartOf="@+id/mTvBkName"
        app:layout_constraintTop_toBottomOf="@+id/mTvBkName" />

    <EditText
        android:id="@+id/mTvBkDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:ems="10"
        android:hint="Enter Booking Date"
        android:inputType="date"
        android:textColorHint="#4CAF50"
        app:layout_constraintStart_toStartOf="@+id/mTvBkPhone"
        app:layout_constraintTop_toBottomOf="@+id/mTvBkPhone" />

    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginTop="21dp"
        android:text="Submit"
        app:layout_constraintStart_toStartOf="@+id/mTvBkDate"
        app:layout_constraintTop_toBottomOf="@+id/mTvBkDate" />

</androidx.constraintlayout.widget.ConstraintLayout>